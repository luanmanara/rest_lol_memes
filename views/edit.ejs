<% include ./partials/header %>

<div class="ui container main">
    <h1 class="ui huge header">Edit <%= post.title %></h1>
    <form class="ui form" action="/posts/<%= post._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="post[title]" value="<%= post.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="post[image]" value="<%= post.image %>">
        </div>
        <div class="field">
            <label>Video</label>
            <input type="text" name="post[video]" value="<%= post.video %>">
        </div>
        <div class="field">
            <label>Dialog</label>
            <textarea name="post[dialog]"><%= post.dialog %></textarea>
        </div>
        <button class="ui green button" type="submit">Enviar</button>
    </form>
</div>

<% include ./partials/footer %>